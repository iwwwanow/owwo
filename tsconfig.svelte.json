{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "isolatedModules": true,

    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",

    "types": ["node", "bun"],
    "allowJs": false,
    "moduleResolution": "node",
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },

  "include": ["adapters/svelte-adapter/src/templates"],

  "exclude": ["/workspace/node_modules/**/*", ""]
}
