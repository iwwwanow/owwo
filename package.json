{
  "name": "owwo",
  "type": "module",
  "devDependencies": {
    "@happy-dom/global-registrator": "^15.11.7",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.5",
    "@types/uuid": "^9.0.8",
    "bun-types": "latest",
    "prettier": "^3.3.3",
    "@kitajs/ts-html-plugin": "4.1.1",
    "@kitajs/html": "4.2.7",
    "typescript-plugin-css-modules": "5.1.0",
    "typescript": "5.7.3"
  },
  "workspaces": [
    "forks/**/*",
    "tests/**/*",
    "contexts/**/*",
    "adapters/**/*",
    "entrypoints/**/*"
  ],
  "scripts": {
    "site:dev": "NODE_ENV=developement bun --watch ./entrypoints/site/src/index.ts",
    "site:build": "bun build ./entrypoints/site/src/index.ts --outdir dist --minify",
    "site:build-image": "docker build -f docker/site.Dockerfile -t owwo/site:latest .",
    "system:build-image": "docker build -f docker/system.Dockerfile -t owwo/system:latest .",
    "compose:dev": "docker compose --env-file .env -f ./docker/dev.docker-compose.yaml up",
    "compose:prod": "docker compose --env-file .env -f ./docker/prod.docker-compose.yaml up",
    "test": "bun test"
  },
  "override": {
    "@sinclair/typebox": "0.32.4"
  }
}
