{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@kitajs/html",
    "plugins": [{ "name": "@kitajs/ts-html-plugin" }],

    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",

    "skipLibCheck": true,
    "noEmit": true,

    "resolveJsonModule": true
  }
}

